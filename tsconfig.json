{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "declaration": false,
        "sourceMap": false,
        "moduleResolution": "bundler"
    },
    "include": [
        "src"
    ]
}
